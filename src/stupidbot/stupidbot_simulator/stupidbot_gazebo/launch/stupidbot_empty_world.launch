<launch>
	<rosparam file="$(find stupidbot_description)/config/stupidbot_control.yaml" command="load"/>

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="worlds/empty.world"/>
		<arg name="paused" value="false"/>
		<arg name="debug" value="false"/>
		<arg name="gui" value="true"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="headless" value="false"/>
	</include>

	<node name="stupidbot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model stupidbot">
		<remap from="/tf_static" to="tf"/>
	</node>

	<!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/stupidbot" args="joint_state_controller"/>
</launch>